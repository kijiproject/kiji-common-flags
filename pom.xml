<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.odiago.common</groupId>
  <artifactId>flags</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>common-flags</name>
  <url>http://www.odiago.com</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <pushChanges>false</pushChanges>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <distributionManagement>
    <snapshotRepository>
      <id>odiago-snapshots</id>
      <name>Odiago Snapshots</name>
      <url>scpexe://maven.odiago.com/var/maven/odiago-snapshots/maven2</url>
    </snapshotRepository>
    <repository>
      <id>odiago-releases</id>
      <name>Odiago releases</name>
      <url>scpexe://maven.odiago.com/var/maven/odiago-releases/maven2</url>
    </repository>
  </distributionManagement>

  <scm>
    <connection>scm:git:ssh://git@git.odiago.com/common-flags.git</connection>
    <url>scm:git:ssh://git@git.odiago.com/common-flags.git</url>
    <developerConnection>scm:git:ssh://git@git.odiago.com/common-flags.git</developerConnection>
  </scm>
</project>
